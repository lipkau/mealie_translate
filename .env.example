# ==============================================================================
# Mealie Recipe Translator Configuration
# ==============================================================================
# Copy this file to .env and configure your settings

# ==============================================================================
# Mealie Configuration
# ==============================================================================
MEALIE_BASE_URL=  # Your Mealie server URL (e.g., https://mealie.example.com)
MEALIE_API_TOKEN= # Your Mealie API token (generate in user settings)

# ==============================================================================
# AI Provider Configuration
# ==============================================================================
TRANSLATOR_PROVIDER= # Choose 'openai' (cloud) or 'ollama' (local)

# OpenAI Configuration (required if TRANSLATOR_PROVIDER=openai)
OPENAI_API_KEY=          # Your OpenAI API key
OPENAI_MODEL=gpt-4o-mini # Model to use: gpt-4o-mini (fast/cheap), gpt-4o (best quality), gpt-3.5-turbo (legacy)

# Ollama Configuration (required if TRANSLATOR_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434 # Ollama server URL
OLLAMA_MODEL=llama2                    # Model to use: llama2, mistral, codellama, etc.
OLLAMA_TIMEOUT=60                      # Request timeout in seconds

# ==============================================================================
# Translation Configuration
# ==============================================================================
TARGET_LANGUAGE=English  # Target language for translation
PROCESSED_TAG=translated # Tag used to mark processed recipes

# ==============================================================================
# Processing Configuration (Optional - adjust for performance/reliability)
# ==============================================================================
BATCH_SIZE=10             # Number of recipes to process in each batch
CRON_SCHEDULE=0 */6 * * * # Schedule for automatic runs (e.g., every 6 hours)
MAX_RETRIES=3             # Number of retry attempts for failed API calls
RETRY_DELAY=1             # Base delay between retries (seconds, exponential backoff)

# ==============================================================================
# Dry Run Configuration (Optional - for testing and preview)
# ==============================================================================
DRY_RUN=false   # Enable dry run mode (preview changes without applying)
DRY_RUN_LIMIT=5 # Maximum recipes to preview in dry run mode
